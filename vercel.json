{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/admin/(.*)",
      "dest": "/api/admin.js"
    },
    {
      "src": "/api/customers/(.*)",
      "dest": "/api/customers.js"
    },
    {
      "src": "/api/sales/(.*)",
      "dest": "/api/sales.js"
    },
    {
      "src": "/api/email/(.*)",
      "dest": "/api/email.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/approve/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/verify-email/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/client/build/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 